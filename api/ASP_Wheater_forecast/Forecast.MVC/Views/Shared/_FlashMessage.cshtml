@if (TempData["success"] != null)
{
    <div class="alert alert-success" role="alert">
        <a href="#" class="alert-link"></a>
        @TempData["success"]
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <a href="#" class="alert-link"></a>
        @TempData["error"]
    </div>
}

