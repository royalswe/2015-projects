    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "sharing is caring", '/', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "All stories", stories_path %></li>
            <% if logged_in? %>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Add Domain", new_domain_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li><%= link_to "Your Domains", domain_path(current_user) %></li>
                    <% if current_user.admin? %>
                      <li><%= link_to "All Domains", domains_path %></li>
                    <% end %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: "delete", data: {no_turbolink: true} %>
                  </li>
                </ul>
              </li>
            <% else %>
                <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>